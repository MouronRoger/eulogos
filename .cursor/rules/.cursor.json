{
    "linting": {
      "enabled": true,
      "pylintEnabled": true,
      "flake8Enabled": true,
      "mypyEnabled": true
    },
    "formatting": {
      "enabled": true,
      "formatOnSave": true,
      "provider": "black"
    },
    "codeActions": {
      "organizeImportsOnSave": true,
      "fixAllOnSave": true
    },
    "editor": {
      "rulers": [100],
      "tabSize": 4,
      "insertSpaces": true,
      "detectIndentation": false
    },
    "filePatterns": {
      "exclude": ["**/__pycache__", "**/.pytest_cache", "**/.mypy_cache", "**/*.pyc"]
    }
  }
